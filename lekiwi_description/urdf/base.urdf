<?xml version="1.0"?>
<robot name="lekiwi">

  <!-- Materials -->
  <material name="light_grey">
    <color rgba="0.8 0.8 0.8 1.0"/>
  </material>
  <material name="charcoal">
    <color rgba="0.15 0.15 0.15 1.0"/>
  </material>

  <!-- LINKS -->

  <!-- Base footprint link (empty) -->
  <link name="base_footprint"/>

  <!-- Base link -->
  <link name="base_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 4.71238898038469"/>
      <geometry>
        <mesh filename="https://raw.githubusercontent.com/adityakamath/lekiwi_ros2/main/lekiwi_description/meshes/lekiwi_base.stl"/>
      </geometry>
      <material name="light_grey"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 4.71238898038469"/>
      <geometry>
        <mesh filename="https://raw.githubusercontent.com/adityakamath/lekiwi_ros2/main/lekiwi_description/meshes/lekiwi_base.stl"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="2.0"/>
      <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.02"/>
    </inertial>
  </link>

  <!-- LD06 laser link -->
  <link name="laser_link">
    <visual>
      <origin xyz="0 0 0" rpy="1.57079632679490 0 0"/>
      <geometry>
        <mesh filename="https://raw.githubusercontent.com/adityakamath/lekiwi_ros2/main/lekiwi_description/meshes/ld06_lidar.stl"/>
      </geometry>
      <material name="charcoal"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="1.57079632679490 0 0"/>
      <geometry>
        <mesh filename="https://raw.githubusercontent.com/adityakamath/lekiwi_ros2/main/lekiwi_description/meshes/ld06_lidar.stl"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.2"/>
      <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
    </inertial>
  </link>

  <!-- Laser frame -->
  <link name="laser_frame"/>

  <!-- Camera link -->
  <link name="camera_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="https://raw.githubusercontent.com/adityakamath/lekiwi_ros2/main/lekiwi_description/meshes/hd_webcam.stl"/>
      </geometry>
      <material name="charcoal"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="https://raw.githubusercontent.com/adityakamath/lekiwi_ros2/main/lekiwi_description/meshes/hd_webcam.stl"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.05"/>
      <inertia ixx="0.00001" ixy="0.0" ixz="0.0" iyy="0.00001" iyz="0.0" izz="0.00001"/>
    </inertial>
  </link>

  <!-- Camera frame-->
  <link name="camera_frame"/>

  <!-- Left wheel link -->
  <link name="left_wheel_link">
    <visual>
      <origin xyz="0 0 0" rpy="3.14159265358979 0 0"/>
      <geometry>
        <mesh filename="https://raw.githubusercontent.com/adityakamath/lekiwi_ros2/main/lekiwi_description/meshes/omni_wheel.stl"/>
      </geometry>
      <material name="charcoal"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="3.14159265358979 0 0"/>
      <geometry>
        <mesh filename="https://raw.githubusercontent.com/adityakamath/lekiwi_ros2/main/lekiwi_description/meshes/omni_wheel.stl"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
    </inertial>
  </link>

  <!-- Back wheel link -->
  <link name="back_wheel_link">
    <visual>
      <origin xyz="0 0 0" rpy="3.14159265358979 0 0"/>
      <geometry>
        <mesh filename="https://raw.githubusercontent.com/adityakamath/lekiwi_ros2/main/lekiwi_description/meshes/omni_wheel.stl"/>
      </geometry>
      <material name="charcoal"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="3.14159265358979 0 0"/>
      <geometry>
        <mesh filename="https://raw.githubusercontent.com/adityakamath/lekiwi_ros2/main/lekiwi_description/meshes/omni_wheel.stl"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
    </inertial>
  </link>

  <!-- Right wheel link -->
  <link name="right_wheel_link">
    <visual>
      <origin xyz="0 0 0" rpy="3.14159265358979 0 0"/>
      <geometry>
        <mesh filename="https://raw.githubusercontent.com/adityakamath/lekiwi_ros2/main/lekiwi_description/meshes/omni_wheel.stl"/>
      </geometry>
      <material name="charcoal"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="3.14159265358979 0 0"/>
      <geometry>
        <mesh filename="https://raw.githubusercontent.com/adityakamath/lekiwi_ros2/main/lekiwi_description/meshes/omni_wheel.stl"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
    </inertial>
  </link>

  <!-- JOINTS -->

  <!-- base_footprint fixed joint -->
  <joint name="base_footprint_joint" type="fixed">
    <parent link="base_footprint"/>
    <child link="base_link"/>
    <origin xyz="0 0 0.04064" rpy="0 0 0"/>
  </joint>

  <!-- laser fixed joint -->
  <joint name="laser_joint" type="fixed">
    <parent link="base_link"/>
    <child link="laser_link"/>
    <origin xyz="-0.045042 0 0.0915" rpy="0 0 0"/>
  </joint>

  <!-- laser_frame fixed joint -->
  <joint name="laser_frame_joint" type="fixed">
    <parent link="laser_link"/>
    <child link="laser_frame"/>
    <origin xyz="0 0 0.027" rpy="0 0 0"/>
  </joint>

  <!-- camera fixed joint -->
  <joint name="camera_joint" type="fixed">
    <parent link="base_link"/>
    <child link="camera_link"/>
    <origin xyz="0.114 0 0.026" rpy="0 1.57079632679490 0"/>
  </joint>

  <!-- camera_frame fixed joint -->
  <joint name="camera_frame_joint" type="fixed">
    <parent link="camera_link"/>
    <child link="camera_frame"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <!-- left wheel joint: 60 degrees anti-clockwise from +X at radius wheel_base_radius -->
  <joint name="left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="left_wheel_link"/>
    <origin xyz="0.06611950000000000 0.11449673600000000 0.01036" rpy="0 1.57079632679490 1.04719755119660"/>
    <axis xyz="0 0 1"/>
    <limit effort="2.942" velocity="4.17167481696419"/>
  </joint>

  <!-- back wheel joint: 180 degrees anti-clockwise from +X at radius base_radius -->
  <joint name="back_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="back_wheel_link"/>
    <origin xyz="-0.132239 0.00000000000000016 0.01036" rpy="0 1.57079632679490 3.14159265358979"/>
    <axis xyz="0 0 1"/>
    <limit effort="2.942" velocity="4.17167481696419"/>
  </joint>

  <!-- right wheel joint: 300 degrees (or -60 degrees) anti-clockwise from +X at radius base_radius -->
  <joint name="right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="right_wheel_link"/>
    <origin xyz="0.06611950000000000 -0.11449673600000000 0.01036" rpy="0 1.57079632679490 -1.04719755119660"/>
    <axis xyz="0 0 1"/>
    <limit effort="2.942" velocity="4.17167481696419"/>
  </joint>

</robot>
